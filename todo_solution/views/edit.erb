<div class="row pt-4">

	<div class="col">
		<h2>Edit a new Todo</h2>
	</div>
</div>
<div class="row">
	<div class="col">
		<form action="/todo/update/<%= @todo.id %>" method="POST">
			<div class="row">
				<div class="col">
					<label for="">Todo Name</label>
					<input type="text" name="name" class="form-control" value="<%= @todo.name  %>">
				</div>
			</div>
			<div class="row mt-4">
				<div class="col">
					<label for="">Todo Description</label>
					<textarea cols="30" rows="10" name="description" class="form-control" ><%= @todo.description %></textarea>
				</div>
			</div>
			<div class="row mt-4">
				<div class="col">
					<input type="submit" class="btn btn-primary">
				</div>
			</div>
		</form>
	</div>
</div>

