<% if @todo.errors.any? %>
	<ul>
		<% @todo.errors.full_messages.each do |error_message| %>
			<li><%= error_message %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @todo do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div>
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>

	<div>
		<%= f.label :priority %>
		<%= f.select :priority, options_for_select(@priorities.map {|p| [p.name, p.code]}) %>
	</div>

	<div>
		<%= f.submit %>
	</div>	
<% end %>